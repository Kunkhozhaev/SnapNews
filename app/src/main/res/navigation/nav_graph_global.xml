<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/news_nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/fragmentGlobalContainer"
        android:name="ru.nurdaulet.news.ui.fragments.FragmentGlobalContainer"
        android:label="FragmentGlobalContainer" >
        <action
            android:id="@+id/action_fragmentGlobalContainer_to_editProfileFragment"
            app:destination="@id/editProfileFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out"/>
        <action
            android:id="@+id/action_fragmentGlobalContainer_to_searchNewsFragment"
            app:destination="@id/searchNewsFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out"/>
        <action
            android:id="@+id/action_fragmentGlobalContainer_to_articleFragment"
            app:destination="@id/articleFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out"/>
    </fragment>
    <fragment
        android:id="@+id/editProfileFragment"
        android:name="ru.nurdaulet.news.ui.fragments.EditProfileFragment"
        android:label="EditProfileFragment" />
    <fragment
        android:id="@+id/searchNewsFragment"
        android:name="ru.nurdaulet.news.ui.fragments.SearchNewsFragment"
        android:label="SearchNewsFragment" >
        <action
            android:id="@+id/action_searchNewsFragment_to_articleFragment"
            app:destination="@id/articleFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out"/>
    </fragment>
    <fragment
        android:id="@+id/articleFragment"
        android:name="ru.nurdaulet.news.ui.fragments.ArticleFragment"
        android:label="ArticleFragment" >
        <argument
            android:name="article"
            app:argType="ru.nurdaulet.news.domain.models.Article" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="ru.nurdaulet.news.ui.fragments.auth.login.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_loginFragment_to_fragmentGlobalContainer"
            app:destination="@id/fragmentGlobalContainer" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="ru.nurdaulet.news.ui.fragments.auth.signup.SignUpFragment"
        android:label="SignUpFragment" >
        <action
            android:id="@+id/action_signUpFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_signUpFragment_to_fragmentGlobalContainer"
            app:destination="@id/fragmentGlobalContainer" />
    </fragment>
</navigation>

