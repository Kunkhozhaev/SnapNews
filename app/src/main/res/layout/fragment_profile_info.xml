<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivProfileBackground"
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/ivRoundedProfileBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/edit_profile_background" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profilePicture"
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:layout_marginTop="-36dp"
        android:scaleType="centerCrop"
        android:padding="2dp"
        app:strokeWidth="1dp"
        android:src="@drawable/no_profile_picture"
        app:layout_constraintBottom_toTopOf="@+id/tvUserName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivProfileBackground"
        app:shapeAppearanceOverlay="@style/circleImageView"
        app:strokeColor="@android:color/darker_gray" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins_regular"
        android:textStyle="bold"
        tools:text="@string/tvProfileName"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilePicture" />

    <TextView
        android:id="@+id/tvUserMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        tools:text="@string/tvProfileMail"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvUserName" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnEditProfile"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:background="@drawable/bg_edit_profile_btn"
        android:drawableStart="@drawable/ic_profile"
        android:drawablePadding="4dp"
        android:gravity="center|start"
        android:paddingStart="4dp"
        android:textAllCaps="false"
        android:fontFamily="@font/poppins_regular"
        android:paddingEnd="12dp"
        android:layout_marginTop="36dp"
        android:textColor="@color/white"
        android:text="@string/btnEditProfileText"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvUserMail" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSettingsProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginHorizontal="24dp"
        android:background="@drawable/bg_settings_btn"
        android:drawableStart="@drawable/ic_settings"
        android:drawableEnd="@drawable/ic_arrow_forward"
        android:drawablePadding="16dp"
        android:gravity="center|start"
        android:paddingStart="8dp"
        android:textAllCaps="false"
        android:fontFamily="@font/poppins_regular"
        android:paddingEnd="12dp"
        android:textColor="@color/black"
        android:text="@string/settingsBtnText"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEditProfile" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLogOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="24dp"
        android:background="@drawable/bg_settings_btn"
        android:drawableStart="@drawable/ic_log_out"
        android:drawablePadding="16dp"
        android:gravity="center|start"
        android:paddingStart="8dp"
        android:textAllCaps="false"
        android:fontFamily="@font/poppins_regular"
        android:paddingEnd="12dp"
        android:textColor="@color/red_bold"
        android:text="@string/logoutBtnText"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSettingsProfile" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>